	</groups>
	<test name="Groups Test">
		<classes>
			<class name="TestNGGroups.AddingFuntionalGroup" />
			<class name="TestNGGroups.AddingRegressionGroup" />
			<class name="TestNGGroups.AddingSomkeGroup" />
			<class name="TestNGGroups.TestngAddingGroups" />
		</classes>
	</test> <!-- Test -->
</suite> <!-- Suite -->
